<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="780.0" prefWidth="656.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25"
            fx:controller="org.example.revopdf.controller.PdfEditorController">

    <top>
        <StackPane>

            <HBox fx:id="textToolbar" spacing="10" alignment="CENTER_LEFT"
                  style="-fx-padding: 8; -fx-background-color: #b3b4b8;">

                <Label text="Font:"/>
                <ComboBox fx:id="fontFamilyCombo" prefWidth="160"/>

                <Label text="Font size:"/>
                <Spinner fx:id="fontSizeSpinner" prefWidth="80"/>

                <Label text="Color:"/>
                <ColorPicker fx:id="textColorPicker"/>

                <Button text="Edit Text" onAction="#onEditSelectedText"/>
            </HBox>

            <HBox fx:id="eraserToolbar" spacing="10" alignment="CENTER_LEFT"
                  style="-fx-padding: 8; -fx-background-color: #b3b4b8;">

                <Label text="Eraser size:"/>
                <ComboBox fx:id="eraserSizeCombo" prefWidth="120"/>
            </HBox>

        </StackPane>
    </top>

    <left>
        <VBox alignment="TOP_CENTER" opacity="0.77" spacing="10" style="-fx-background-color: #a9adb8;">
            <padding>
                <Insets bottom="10" left="5" right="5" top="10"/>
            </padding>

            <Button onAction="#onDragToolSelected" graphicTextGap="0">
                <graphic>
                    <ImageView fitHeight="24" fitWidth="24">
                        <Image url="@../icons/hand.png"/>
                    </ImageView>
                </graphic>
            </Button>

            <Button onAction="#onNoneToolSelected" graphicTextGap="0">
                <graphic>
                    <ImageView fitHeight="24" fitWidth="24">
                        <Image url="@../icons/cursor.png"/>
                    </ImageView>
                </graphic>
            </Button>

            <Button onAction="#onTextToolSelected" graphicTextGap="0">
                <graphic>
                    <ImageView fitHeight="24" fitWidth="24">
                        <Image url="@../icons/text.png"/>
                    </ImageView>
                </graphic>
            </Button>

            <Button onAction="#onDrawToolSelected" graphicTextGap="0">
                <graphic>
                    <ImageView fitHeight="24" fitWidth="24">
                        <Image url="@../icons/draw.png"/>
                    </ImageView>
                </graphic>
            </Button>

            <Button onAction="#onEraseToolSelected" graphicTextGap="0">
                <graphic>
                    <ImageView fitHeight="24" fitWidth="24">
                        <Image url="@../icons/erase.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button onAction="#onZoomIn" graphicTextGap="0">
                <graphic>
                    <ImageView fitHeight="24" fitWidth="24">
                        <Image url="@../icons/zoom-in.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button onAction="#onZoomOut" graphicTextGap="0">
                <graphic>
                    <ImageView fitHeight="24" fitWidth="24">
                        <Image url="@../icons/zoom-out.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <cursor>
                <Cursor fx:constant="DEFAULT"/>
            </cursor>
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" pannable="true">
            <StackPane>
                <ImageView fx:id="pdfImageView" preserveRatio="true"/>
                <Canvas fx:id="overlayCanvas"/>
            </StackPane>
        </ScrollPane>
    </center>

    <bottom>
        <HBox spacing="10" style="-fx-padding: 10;" alignment="CENTER">
            <Button onAction="#onOpenPdfClick" text="Open PDF" style="-fx-font-size: 16px; -fx-padding: 10 20 10 20;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button onAction="#onSavePdfClick" text="Save PDF" style="-fx-font-size: 16px; -fx-padding: 10 20 10 20;"/>
        </HBox>
    </bottom>

    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>
</BorderPane>
